    <dimen name="margin_questions_images_answers">5dp</dimen>

    <!-- Margin between the questions - using rounded corners-->
    <dimen name="margin_between_questions">10dp</dimen>

    <!-- Padding in the score & reset buttons -->
    <dimen name="padding_score_button">10dp</dimen>

    <!-- Margin between the reset and score buttons -->
    <dimen name="margin_right_reset_score">50dp</dimen>

