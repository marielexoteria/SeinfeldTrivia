    <!-- Space between the logo and the first question -->
    <dimen name="margin_top_first_question">30dp</dimen>

    <!-- Space used for vertical space between elements -->
    <dimen name="margin_top">20dp</dimen>
    <dimen name="margin_bottom">20dp</dimen>

    <!-- General padding -->
    <dimen name="app_padding">16dp</dimen>

    <!-- Text size for the questions -->
    <dimen name="questions_size">16sp</dimen>

    <!-- Text size for the radio buttons and explanations to the correct answers -->
    <dimen name="options_size">14sp</dimen>

