<?xml version="1.0" encoding="utf-8"?>
<!-- code from http://www.gadgetsaint.com/tips/rounded-corners-views-layouts-android/#.WpLaD4JG2CQ -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <stroke
        android:width="@dimen/border_size"
        android:color="@color/border_color" />

    <solid
        android:color="@color/bg_color"
        />

    <corners android:radius="@dimen/border_radius" />

    <padding
        android:left="@dimen/padding_left_right"
        android:top="@dimen/padding_top_bottom"
        android:right="@dimen/padding_left_right"
        android:bottom="@dimen/padding_top_bottom">
    </padding>

</shape>